<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2"><i class="bi bi-speedometer2"></i> Dashboard - Sistema de Gestión Integral</h1>
            <p class="text-muted">Resumen general del sistema</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Proyectos</h6>
                            <h2 class="mb-0">{{stats.proyectos.total_proyectos}}</h2>
                            <small>Activos: {{stats.proyectos.proyectos_activos}}</small>
                        </div>
                        <i class="bi bi-folder2-open" style="font-size: 2rem; opacity: 0.7;"></i>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="/proyectos" class="text-white text-decoration-none">
                        <i class="bi bi-arrow-right"></i> Ver proyectos
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Clientes</h6>
                            <h2 class="mb-0">{{stats.clientes.total_clientes}}</h2>
                            <small>Registrados</small>
                        </div>
                        <i class="bi bi-people-fill" style="font-size: 2rem; opacity: 0.7;"></i>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="/clientes" class="text-white text-decoration-none">
                        <i class="bi bi-arrow-right"></i> Ver clientes
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-info h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Facturas (Mes)</h6>
                            <h2 class="mb-0">{{stats.facturas.total_facturas}}</h2>
                            <small>{{formatCurrency stats.facturas.monto_total_mes}}</small>
                        </div>
                        <i class="bi bi-receipt" style="font-size: 2rem; opacity: 0.7;"></i>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="/facturas" class="text-white text-decoration-none">
                        <i class="bi bi-arrow-right"></i> Ver facturas
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Certificados</h6>
                            <h2 class="mb-0">{{stats.certificados.total_certificados}}</h2>
                            <small>Emitidos: {{stats.certificados.certificados_emitidos}}</small>
                        </div>
                        <i class="bi bi-award" style="font-size: 2rem; opacity: 0.7;"></i>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="/certificados" class="text-dark text-decoration-none">
                        <i class="bi bi-arrow-right"></i> Ver certificados
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-lg-6 col-md-12 mb-3">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Ingresos por Mes</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container" style="position: relative; height: 300px;">
                        <canvas id="incomeChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6 col-md-12 mb-3">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Estados de Proyectos</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container" style="position: relative; height: 300px;">
                        <canvas id="projectsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Active Projects -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-kanban"></i> Proyectos Activos</h5>
                    <a href="/proyectos" class="btn btn-sm btn-outline-primary">Ver todos</a>
                </div>
                <div class="card-body">
                    {{#if activeProyectos}}
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Proyecto</th>
                                    <th>Cliente</th>
                                    <th>Fecha Inicio</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each activeProyectos}}
                                <tr>
                                    <td>
                                        <a href="/proyectos/ver/{{this.id}}" class="text-decoration-none">
                                            <strong>{{this.nombre}}</strong>
                                        </a>
                                    </td>
                                    <td>{{this.cliente}}</td>
                                    <td>{{formatDate this.fecha_inicio}}</td>
                                    <td>
                                        <span class="badge {{#eq this.estado 'Pendiente'}}bg-warning{{/eq}}{{#eq this.estado 'En Progreso'}}bg-info{{/eq}}{{#eq this.estado 'Finalizado'}}bg-success{{/eq}}{{#eq this.estado 'Cancelado'}}bg-secondary{{/eq}}">
                                            {{this.estado}}
                                        </span>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{else}}
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.5;"></i>
                        <p class="mt-2 mb-0">No hay proyectos activos en este momento</p>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/proyectos/nuevo" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Nuevo Proyecto
                        </a>
                        <a href="/clientes/nuevo" class="btn btn-success">
                            <i class="bi bi-person-plus"></i> Nuevo Cliente
                        </a>
                        <a href="/certificados/nuevo" class="btn btn-info">
                            <i class="bi bi-file-earmark-plus"></i> Nuevo Certificado
                        </a>
                        <a href="/certificados" class="btn btn-outline-secondary">
                            <i class="bi bi-list-check"></i> Ver Certificados
                        </a>
                    </div>
                </div>
            </div>

            {{#if recentFacturas}}
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-clock"></i> Facturas Recientes</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        {{#each recentFacturas}}
                        <div class="list-group-item px-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{this.numero_factura_completo}}</strong>
                                    <br>
                                    <small class="text-muted">{{this.cliente}}</small>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold text-success">{{formatCurrency this.monto}}</div>
                                    <small class="text-muted">{{formatDate this.fecha_emision}}</small>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>

{{#section 'scripts'}}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Income Chart (Bar Chart)
    const incomeCtx = document.getElementById('incomeChart').getContext('2d');
    new Chart(incomeCtx, {
        type: 'bar',
        data: {
            labels: {{{chartData.monthLabels}}},
            datasets: [{
                label: 'Ingresos ($)',
                data: {{{chartData.monthlyIncome}}},
                backgroundColor: 'rgba(54, 162, 235, 0.8)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) {
                            return '$' + value.toLocaleString('es-AR');
                        }
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });

    // Projects Status Chart (Doughnut Chart)
    const projectsCtx = document.getElementById('projectsChart').getContext('2d');
    new Chart(projectsCtx, {
        type: 'doughnut',
        data: {
            labels: ['Pendientes', 'En Progreso', 'Finalizados', 'Cancelados'],
            datasets: [{
                data: {{{chartData.projectsByStatus}}},
                backgroundColor: [
                    '#ffc107',
                    '#17a2b8', 
                    '#28a745',
                    '#6c757d'
                ],
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
});
</script>
{{/section}}
