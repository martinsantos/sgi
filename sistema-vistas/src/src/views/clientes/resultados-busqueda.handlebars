{{#section 'title'}}{{title}}{{/section}}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-search text-info"></i>
                        {{title}}
                    </h3>
                    <div>
                        <a href="/clientes/nuevo" class="btn btn-success">
                            <i class="fas fa-plus"></i>
                            Nuevo Cliente
                        </a>
                        <a href="/clientes" class="btn btn-primary">
                            <i class="fas fa-list"></i>
                            Todos los Clientes
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Filtros de búsqueda -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <form method="GET" action="/clientes/buscar" class="form-inline">
                                        <div class="form-group mr-3">
                                            <label for="search" class="mr-2">Nombre:</label>
                                            <input type="text" 
                                                   id="search" 
                                                   name="search" 
                                                   class="form-control" 
                                                   placeholder="Buscar por nombre"
                                                   value="{{filters.search}}">
                                        </div>
                                        <div class="form-group mr-3">
                                            <label for="email" class="mr-2">Email:</label>
                                            <input type="email" 
                                                   id="email" 
                                                   name="email" 
                                                   class="form-control" 
                                                   placeholder="email@ejemplo.com"
                                                   value="{{filters.email}}">
                                        </div>
                                        <div class="form-group mr-3">
                                            <label for="telefono" class="mr-2">Teléfono:</label>
                                            <input type="text" 
                                                   id="telefono" 
                                                   name="telefono" 
                                                   class="form-control" 
                                                   placeholder="Teléfono"
                                                   value="{{filters.telefono}}">
                                        </div>
                                        <div class="form-group mr-3">
                                            <label for="activo" class="mr-2">Estado:</label>
                                            <select id="activo" name="activo" class="form-control">
                                                <option value="">Todos</option>
                                                <option value="1" {{#if (eq filters.activo 1)}}selected{{/if}}>Activos</option>
                                                <option value="0" {{#if (eq filters.activo 0)}}selected{{/if}}>Inactivos</option>
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i>
                                            Buscar
                                        </button>
                                        <a href="/clientes" class="btn btn-outline-secondary ml-2">
                                            <i class="fas fa-times"></i>
                                            Limpiar
                                        </a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Resultados -->
                    {{#if clientes}}
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i>
                                    Se encontraron <strong>{{pagination.total}}</strong> resultados
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Cliente</th>
                                        <th>Tipo</th>
                                        <th>Contacto</th>
                                        <th>CUIT/CUIL</th>
                                        <th>Facturas</th>
                                        <th>Proyectos</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each clientes}}
                                    <tr>
                                        <td>
                                            <div>
                                                <strong>{{nombre_completo}}</strong>
                                                {{#if codigo}}<br><small class="text-muted">Código: {{codigo}}</small>{{/if}}
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge {{getBadgeClass tipo_persona}}">{{tipo_persona}}</span>
                                        </td>
                                        <td>
                                            {{#if email}}<div><i class="fas fa-envelope"></i> {{email}}</div>{{/if}}
                                            {{#if telefono}}<div><i class="fas fa-phone"></i> {{telefono}}</div>{{/if}}
                                            {{#unless email}}{{#unless telefono}}<span class="text-muted">Sin contacto</span>{{/unless}}{{/unless}}
                                        </td>
                                        <td>
                                            {{#if cuil_cuit}}{{cuil_cuit}}{{else}}<span class="text-muted">N/A</span>{{/if}}
                                        </td>
                                        <td class="text-center">
                                            {{#if total_facturas}}
                                                <span class="badge badge-primary">{{total_facturas}}</span>
                                            {{else}}
                                                <span class="badge badge-secondary">0</span>
                                            {{/if}}
                                        </td>
                                        <td class="text-center">
                                            {{#if total_proyectos}}
                                                <span class="badge badge-info">{{total_proyectos}}</span>
                                            {{else}}
                                                <span class="badge badge-secondary">0</span>
                                            {{/if}}
                                        </td>
                                        <td>
                                            {{#if activo}}
                                                <span class="badge badge-success">Activo</span>
                                            {{else}}
                                                <span class="badge badge-danger">Inactivo</span>
                                            {{/if}}
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/clientes/{{id}}" class="btn btn-sm btn-info" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/facturas/nueva?cliente_id={{id}}" class="btn btn-sm btn-success" title="Nueva factura">
                                                    <i class="fas fa-file-invoice-dollar"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>

                        <!-- Paginación -->
                        {{#if (gt pagination.pages 1)}}
                            <nav aria-label="Navegación de resultados">
                                <ul class="pagination justify-content-center">
                                    {{#if (gt currentPage 1)}}
                                        <li class="page-item">
                                            <a class="page-link" href="?{{queryString pagination.previousParams}}">
                                                <i class="fas fa-chevron-left"></i> Anterior
                                            </a>
                                        </li>
                                    {{/if}}
                                    
                                    {{#each pagination.pageNumbers}}
                                        <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                                            <a class="page-link" href="?{{../pagination.getPageUrl this}}">{{this}}</a>
                                        </li>
                                    {{/each}}
                                    
                                    {{#if (lt currentPage pagination.pages)}}
                                        <li class="page-item">
                                            <a class="page-link" href="?{{queryString pagination.nextParams}}">
                                                Siguiente <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </li>
                                    {{/if}}
                                </ul>
                            </nav>
                        {{/if}}

                    {{else}}
                        <div class="row">
                            <div class="col-12">
                                <div class="text-center py-5">
                                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                                    <h4 class="text-muted">No se encontraron resultados</h4>
                                    <p class="text-muted">
                                        Intenta modificar los criterios de búsqueda o 
                                        <a href="/clientes" class="btn btn-link">ver todos los clientes</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    console.log('Resultados de búsqueda de clientes cargados');
    
    // Resaltar términos de búsqueda
    const searchTerm = '{{filters.search}}';
    if (searchTerm) {
        $('td').highlight(searchTerm);
    }
});
</script>
