        }

        container.innerHTML = `
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Archivo</th>
                  <th>Descripci贸n</th>
                  <th>Fecha</th>
                  <th>Tama帽o</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                ${data.adjuntos.map(adj => `
                  <tr>
                    <td>
                      <i class="bi bi-file-earmark"></i>
                      ${adj.nombre_archivo}
                    </td>
                    <td>${adj.descripcion || '-'}</td>
                    <td><small>${new Date(adj.fecha_subida).toLocaleDateString('es-AR')}</small></td>
                    <td><small>${formatBytes(adj.tama帽o_bytes)}</small></td>
