<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Listado de Clientes</h4>
            <div class="btn-group" role="group">
                <a href="/api/clientes/exportar" class="btn btn-success">
                    <i class="fas fa-file-earmark-excel"></i> Exportar Excel
                </a>
                <a href="/clientes/nuevo" class="btn btn-light">
                    <i class="fas fa-plus"></i> Nuevo Cliente
                </a>
            </div>
        </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <form method="GET" action="/clientes">
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control" 
                                           placeholder="Buscar por nombre, apellido o código..." 
                                           value="{{search}}">
                                    <input type="hidden" name="sort_by" value="{{sort_by}}">
                                    <input type="hidden" name="sort_order" value="{{sort_order}}">
                                    <button class="btn btn-outline-secondary" type="submit">
                                        <i class="fas fa-search"></i> Buscar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <a href="?sort_by=nombre&sort_order={{#if (eq sort_by 'nombre')}}{{#if (eq sort_order 'ASC')}}DESC{{else}}ASC{{/if}}{{else}}ASC{{/if}}&search={{search}}" 
                                           class="text-white text-decoration-none">
                                            Nombre
                                            {{#if (eq sort_by 'nombre')}}
                                                {{#if (eq sort_order 'ASC')}}
                                                    <i class="fas fa-sort-up"></i>
                                                {{else}}
                                                    <i class="fas fa-sort-down"></i>
                                                {{/if}}
                                            {{else}}
                                                <i class="fas fa-sort text-muted opacity-50"></i>
                                            {{/if}}
                                        </a>
                                    </th>
                                    <th>Apellido</th>
                                    <th>
                                        <a href="?sort_by=codigo&sort_order={{#if (eq sort_by 'codigo')}}{{#if (eq sort_order 'ASC')}}DESC{{else}}ASC{{/if}}{{else}}ASC{{/if}}&search={{search}}" 
                                           class="text-white text-decoration-none">
                                            Código
                                            {{#if (eq sort_by 'codigo')}}
                                                {{#if (eq sort_order 'ASC')}}
                                                    <i class="fas fa-sort-up"></i>
                                                {{else}}
                                                    <i class="fas fa-sort-down"></i>
                                                {{/if}}
                                            {{else}}
                                                <i class="fas fa-sort text-muted opacity-50"></i>
                                            {{/if}}
                                        </a>
                                    </th>
                                    <th>Tipo</th>
                                    <th>
                                        <a href="?sort_by=total_facturas&sort_order={{#if (eq sort_by 'total_facturas')}}{{#if (eq sort_order 'ASC')}}DESC{{else}}ASC{{/if}}{{else}}DESC{{/if}}&search={{search}}" 
                                           class="text-white text-decoration-none">
                                            Facturas
                                            {{#if (eq sort_by 'total_facturas')}}
                                                {{#if (eq sort_order 'ASC')}}
                                                    <i class="fas fa-sort-up"></i>
                                                {{else}}
                                                    <i class="fas fa-sort-down"></i>
                                                {{/if}}
                                            {{else}}
                                                <i class="fas fa-sort text-muted opacity-50"></i>
                                            {{/if}}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="?sort_by=monto_total&sort_order={{#if (eq sort_by 'monto_total')}}{{#if (eq sort_order 'ASC')}}DESC{{else}}ASC{{/if}}{{else}}DESC{{/if}}&search={{search}}" 
                                           class="text-white text-decoration-none">
                                            Monto Total
                                            {{#if (eq sort_by 'monto_total')}}
                                                {{#if (eq sort_order 'ASC')}}
                                                    <i class="fas fa-sort-up"></i>
                                                {{else}}
                                                    <i class="fas fa-sort-down"></i>
                                                {{/if}}
                                            {{else}}
                                                <i class="fas fa-sort text-muted opacity-50"></i>
                                            {{/if}}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="?sort_by=total_proyectos&sort_order={{#if (eq sort_by 'total_proyectos')}}{{#if (eq sort_order 'ASC')}}DESC{{else}}ASC{{/if}}{{else}}DESC{{/if}}&search={{search}}" 
                                           class="text-white text-decoration-none">
                                            Proyectos
                                            {{#if (eq sort_by 'total_proyectos')}}
                                                {{#if (eq sort_order 'ASC')}}
                                                    <i class="fas fa-sort-up"></i>
                                                {{else}}
                                                    <i class="fas fa-sort-down"></i>
                                                {{/if}}
                                            {{else}}
                                                <i class="fas fa-sort text-muted opacity-50"></i>
                                            {{/if}}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="?sort_by=ultima_actividad&sort_order={{#if (eq sort_by 'ultima_actividad')}}{{#if (eq sort_order 'ASC')}}DESC{{else}}ASC{{/if}}{{else}}DESC{{/if}}&search={{search}}" 
                                           class="text-white text-decoration-none">
                                            Última Actividad
                                            {{#if (eq sort_by 'ultima_actividad')}}
                                                {{#if (eq sort_order 'ASC')}}
                                                    <i class="fas fa-sort-up"></i>
                                                {{else}}
                                                    <i class="fas fa-sort-down"></i>
                                                {{/if}}
                                            {{else}}
                                                <i class="fas fa-sort text-muted opacity-50"></i>
                                            {{/if}}
                                        </a>
                                    </th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each clientes}}
                                <tr>
                                    <td>{{#if this.nombre}}{{this.nombre}}{{else}}<span class="empty-field">Sin nombre</span>{{/if}}</td>
                                    <td>{{#if this.apellido}}{{this.apellido}}{{else}}<span class="empty-field">Sin apellido</span>{{/if}}</td>
                                    <td>{{#if this.codigo}}{{this.codigo}}{{else}}<span class="empty-field">Sin código</span>{{/if}}</td>
                                    <td>
                                        {{#if (eq this.tipo "1")}}
                                            <span class="badge bg-primary">Cliente</span>
                                        {{else if (eq this.tipo "2")}}
                                            <span class="badge bg-success">Proveedor</span>
                                        {{else if (eq this.tipo "3")}}
                                            <span class="badge bg-info">Banco</span>
                                        {{else if this.tipo}}
                                            <span class="badge bg-secondary">Tipo {{this.tipo}}</span>
                                        {{else}}
                                            <span class="badge bg-secondary">No definido</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{#if this.total_facturas}}{{this.total_facturas}}{{else}}0{{/if}}</span>
                                    </td>
                                    <td>
                                        {{#if this.monto_total}}
                                            <strong class="text-success">{{formatCurrency this.monto_total}}</strong>
                                        {{else}}
                                            <strong class="text-muted">$ 0,00</strong>
                                        {{/if}}
                                        {{#if (gt this.monto_pendiente 0)}}
                                        <br><small class="text-warning">Pendiente: {{formatCurrency this.monto_pendiente}}</small>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <span class="badge bg-dark">{{#if this.total_proyectos}}{{this.total_proyectos}}{{else}}0{{/if}}</span>
                                    </td>
                                    <td>
                                        {{#if this.ultima_actividad}}
                                            {{formatDate this.ultima_actividad}}
                                        {{else}}
                                            <span class="empty-field">Sin actividad</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/clientes/ver/{{this.id}}" class="btn btn-outline-primary" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/clientes/editar/{{this.id}}" class="btn btn-outline-warning" title="Editar">
                                                <i class="fas fa-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="9" class="text-center">No se encontraron clientes</td>
                                </tr>
                                {{/each}}
                    </tbody>
                </table>
            </div>

            {{!-- Pagination --}}
            {{#if pagination}}
            <div class="row mt-4">
                <div class="col-md-6 d-flex align-items-center">
                    <div class="pagination-info">
                        Mostrando página <strong>{{pagination.current}}</strong> de <strong>{{pagination.total}}</strong>
                        (<strong>{{totalCount}}</strong> clientes en total)
                    </div>
                </div>
                <div class="col-md-6">
                    <nav aria-label="Paginación de clientes">
                        <ul class="pagination justify-content-end mb-0">
                            {{!-- First page link --}}
                            {{#if pagination.hasPrev}}
                                <li class="page-item">
                                    <a class="page-link" href="?page=1{{#if sort_by}}&sort_by={{sort_by}}{{/if}}{{#if sort_order}}&sort_order={{sort_order}}{{/if}}{{#if search}}&search={{search}}{{/if}}" title="Primera página">
                                        <i class="fas fa-chevron-double-left"></i>
                                    </a>
                                </li>
                            {{else}}
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="fas fa-chevron-double-left"></i>
                                    </span>
                                </li>
                            {{/if}}
                            
                            {{!-- Previous page --}}
                            {{#if pagination.hasPrev}}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{pagination.prevPage}}{{#if sort_by}}&sort_by={{sort_by}}{{/if}}{{#if sort_order}}&sort_order={{sort_order}}{{/if}}{{#if search}}&search={{search}}{{/if}}" title="Página anterior">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            {{else}}
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="fas fa-chevron-left"></i>
                                    </span>
                                </li>
                            {{/if}}
                            
                            {{!-- Page numbers --}}
                            {{#if (gt pagination.total 1)}}
                                {{!-- Show ellipsis if startPage > 1 --}}
                                {{#if (gt pagination.startPage 1)}}
                                    {{#unless (eq pagination.startPage 2)}}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {{/unless}}
                                {{/if}}
                                
                                {{!-- Show page numbers around current page --}}
                                {{#each (range pagination.startPage pagination.endPage)}}
                                    {{#if (eq this ../pagination.current)}}
                                        <li class="page-item active" aria-current="page">
                                            <span class="page-link">{{this}}</span>
                                        </li>
                                    {{else}}
                                        <li class="page-item">
                                            <a class="page-link" href="?page={{this}}{{#if ../sort_by}}&sort_by={{../sort_by}}{{/if}}{{#if ../sort_order}}&sort_order={{../sort_order}}{{/if}}{{#if ../search}}&search={{../search}}{{/if}}">
                                                {{this}}
                                            </a>
                                        </li>
                                    {{/if}}
                                {{/each}}
                                
                                {{!-- Show ellipsis if endPage < total --}}
                                {{#if (lt pagination.endPage pagination.total)}}
                                    {{#unless (eq pagination.endPage (subtract pagination.total 1))}}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {{/unless}}
                                {{/if}}
                            {{/if}}
                            
                            {{!-- Next page --}}
                            {{#if pagination.hasNext}}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{pagination.nextPage}}{{#if sort_by}}&sort_by={{sort_by}}{{/if}}{{#if sort_order}}&sort_order={{sort_order}}{{/if}}{{#if search}}&search={{search}}{{/if}}" title="Página siguiente">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            {{else}}
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="fas fa-chevron-right"></i>
                                    </span>
                                </li>
                            {{/if}}
                            
                            {{!-- Last page link --}}
                            {{#if pagination.hasNext}}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{pagination.total}}{{#if sort_by}}&sort_by={{sort_by}}{{/if}}{{#if sort_order}}&sort_order={{sort_order}}{{/if}}{{#if search}}&search={{search}}{{/if}}" title="Última página">
                                        <i class="fas fa-chevron-double-right"></i>
                                    </a>
                                </li>
                            {{else}}
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="fas fa-chevron-double-right"></i>
                                    </span>
                                </li>
                            {{/if}}
                        </ul>
                    </nav>
                </div>
            </div>
            {{/if}}

        </div>
    </div>
</div>

{{#section 'scripts'}}
<script>
    $(document).ready(function() {
        // Handle search form submission on Enter key
        $('input[name="search"]').on('keypress', function(e) {
            if (e.which === 13) { // Enter key
                $(this).closest('form').submit();
            }
        });

        // Add loading state to sort links
        $('th a').on('click', function() {
            const link = $(this);
            const originalText = link.html();
            link.html('<i class="fas fa-spinner fa-spin"></i> Cargando...');
            
            // Restore original text after a delay if navigation fails
            setTimeout(function() {
                link.html(originalText);
            }, 5000);
        });

        // Export function
        window.exportarClientes = function() {
            window.location.href = '/api/clientes/exportar';
        };

        // Show current sort indicators more prominently
        $('.table th a').hover(
            function() {
                $(this).addClass('text-light');
            },
            function() {
                $(this).removeClass('text-light');
            }
        );
    });
</script>
{{/section}}
